package modelo;

import java.util.List;
//import java.util.ArrayList;

public class Equipo {
	private String nombre;
	private String abreviatura;
	private List<Jugador> jugadores;
	private Entrenador entrenador;

	public Equipo(String nombre, String abreviatura, List<Jugador> jugadores, Entrenador entrenador) throws Exception {
		this.nombre = nombre;
		if (abreviatura.length() != 3 ) throw new IllegalArgumentException("La abreviatura del equipo debe tener 3 Caracteres");
		this.abreviatura = abreviatura;
		this.jugadores = jugadores;
		this.entrenador = entrenador;
	}
	public String getNombre() {
		return nombre;
	}
	public void setNombre(String nombre) {
		this.nombre = nombre;
	}
	public String getAbreviatura() {
		return abreviatura;
	}
	public void setAbreviatura(String abreviatura) {
		this.abreviatura = abreviatura;
	}
	public List<Jugador> getJugadores() {
		return jugadores;
	}
	public void setJugadores(List<Jugador> jugadores) {
		this.jugadores = jugadores;
	}
	public Entrenador getEntrenador() {
		return entrenador;
	}
	public void setEntrenador(Entrenador entrenador) {
		this.entrenador = entrenador;
	}
	public Jugador getJugador(int indice) {
		return jugadores.get(indice);
	}
	public void addJugador(Jugador jugador) {
		jugadores.add(jugador);
	}
}
