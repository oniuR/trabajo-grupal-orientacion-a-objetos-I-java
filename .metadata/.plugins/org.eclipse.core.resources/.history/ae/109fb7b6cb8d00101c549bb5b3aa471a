package modelo;
import java.time.LocalDate;
import java.util.List;
public class Torneo {
	private String nombre;
	private List<Equipo> equipos;
	private LocalDate inicio;
	private LocalDate fin;
	public Torneo(String nombre, List<Equipo> equipos, LocalDate inicio, LocalDate fin) {
		super();
		this.nombre = nombre;
		this.equipos = equipos;
		this.inicio = inicio;
		this.fin = fin;
	}

	public String getNombre() {
		return nombre;
	}

	public void setNombre(String nombre) {
		this.nombre = nombre;
	}

	public List<Equipo> getEquipos() {
		return equipos;
	}
	public Equipo getEquipo(int indice) {
		return equipos.get(indice);
	}
	public void addEquipo(Equipo equipo) {
		equipos.add(equipo);
	}
	public void setEquipos(List<Equipo> equipos) {
		this.equipos = equipos;
	}

	public LocalDate getInicio() {
		return inicio;
	}

	public void setInicio(LocalDate inicio) {
		this.inicio = inicio;
	}

	public LocalDate getFin() {
		return fin;
	}

	public void setFin(LocalDate fin) {
		this.fin = fin;
	}

	public String getTemporada() {
		int mes = inicio.getMonthValue();
        int dia = inicio.getDayOfMonth();
        String temporada = "";
        if ((mes == 12 && dia >= 21) || (mes <= 3 && dia < 20)) {
            temporada = "Verano";
        } else if ((mes == 3 && dia >= 20) || (mes < 6 || (mes == 6 && dia < 21))) {
            temporada = "OtoÃ±o";
        } else if ((mes == 6 && dia >= 21) || (mes < 9 || (mes == 9 && dia < 23))) {
            temporada = "Invierno";
        } else {
        	temporada = "Primavera";
        }
        return temporada;
	}
}
